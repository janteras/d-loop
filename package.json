{
  "name": "d-loop-protocol",
  "version": "1.0.0",
  "description": "D-Loop Protocol Smart Contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/**/$npm_config_contract.test.js",
    "test:integration": "hardhat test test/integration/**/*.test.js",
    "test:security": "hardhat test test/security/*.test.js",
    "test:performance": "node test/scripts/performance/run-performance-tests.js",
    "test:performance:gas": "REPORT_GAS=true hardhat test test/scripts/performance/**/*.test.js",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:performance:benchmark": "hardhat test test/scripts/performance/**/*.benchmark.js",
    "test:performance:token": "REPORT_GAS=true hardhat test test/scripts/performance/utils/TokenApprovalOptimizer.*.js",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "solhint": "npx solhint 'contracts/**/*.sol'",
    "solhint:strict": "npx solhint 'contracts/**/*.sol' --max-warnings 0",
    "solhint:fix": "npx solhint --fix 'contracts/**/*.sol'",
    "pretest:performance": "npm run solhint",
    "validate:mocks": "node test/scripts/ci/validate-mock-contracts.js",
    "coverage": "hardhat coverage --testfiles 'test/{unit,integration,security}/*.test.js'",
    "coverage:html": "hardhat coverage && npx istanbul report html",
    "coverage:performance": "hardhat coverage --testfiles 'test/scripts/performance/**/*.test.js'",
    "coverage:full": "hardhat coverage --testfiles 'test/**/*.test.js' && npx istanbul report html",
    "coverage:critical": "hardhat coverage --testfiles 'test/{unit,integration}/core/*.test.js' && npx istanbul report html",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.js --network sepolia",
    "lint": "eslint 'test/**/*.js'",
    "lint:fix": "eslint 'test/**/*.js' --fix",
    "check:ethers-imports": "node scripts/check-ethers-imports.js --full-check",
    "fix:ethers-imports": "node scripts/ethers-shim-migration-v2.js",
    "standardize:test-imports": "node scripts/standardize-test-imports.js",
    "prepare": "husky install",
    "ci": "npm run compile && npm run validate:mocks && npm run standardize:test-imports && npm run test:gas && npm run solhint:strict && npm run check:ethers-imports"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.0.1",
    "dotenv": "^16.5.0",
    "ethers": "^6.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-solhint": "^4.0.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "hardhat": "^2.19.0",
    "hardhat-abi-exporter": "^2.11.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "solhint": "^5.0.5",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  }
}
